<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ObjekNasabahActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/judulobjek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Object Nasabah"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/namaobjek"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/judulobjek"
            android:text="Nama: "
            />
        <TextView
            android:id="@+id/alamatobjek"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/namaobjek"
            android:text="Alamat: "
            />
        <TextView
            android:id="@+id/passwordobjek"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/alamatobjek"
            android:text="Password: "
            />
        <TextView
            android:id="@+id/tokenobjek"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/passwordobjek"
            android:text="Token: "
            />
        <TextView
            android:id="@+id/saldoobjek"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tokenobjek"
            android:text="Saldo: "
            />
        <TextView
            android:id="@+id/aktifobjek"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/saldoobjek"
            android:text="Aktif: "
            />

        <Button
            android:id="@+id/btnrefresh"
            android:layout_width="309dp"
            android:layout_height="61dp"
            android:layout_below="@+id/aktifobjek"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bgbutton"
            android:text="Refresh" />
        <EditText
            android:id="@+id/hintnama"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnrefresh"
            android:hint="Nama"/>
        <Button
            android:id="@+id/btnsetnama"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/hintnama"
            android:layout_below="@id/btnrefresh"
            android:text="SET"/>
        <EditText
            android:id="@+id/hintalamat"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hintnama"
            android:hint="Alamat"/>
        <Button
            android:id="@+id/btnsetalamat"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/hintalamat"
            android:layout_below="@id/btnsetnama"
            android:text="SET"/>
        <EditText
            android:id="@+id/hintpassword"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hintalamat"
            android:hint="Password "/>
        <Button
            android:id="@+id/btnsetpassword"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/hintpassword"
            android:layout_below="@id/btnsetalamat"
            android:text="SET"/>
        <EditText
            android:id="@+id/hinttoken"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hintpassword"
            android:hint="Token"/>
        <Button
            android:id="@+id/btnsettoken"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/hinttoken"
            android:layout_below="@id/btnsetpassword"
            android:text="SET"/>
        <EditText
            android:id="@+id/hintsaldo"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hinttoken"
            android:hint="Saldo"/>
        <Button
            android:id="@+id/btnsetsaldo"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/hintsaldo"
            android:layout_below="@id/btnsettoken"
            android:text="SET"/>
        <Button
            android:id="@+id/btnresetpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESET PASSWORD"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/hintsaldo"
            android:background="@drawable/bgbutton"/>
        <Button
            android:id="@+id/btnpromosi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROMOSI"
            android:textSize="20dp"
            android:layout_toRightOf="@+id/btnresetpassword"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/hintsaldo"
            android:background="@drawable/bgbutton"/>
    </RelativeLayout>


</ScrollView>