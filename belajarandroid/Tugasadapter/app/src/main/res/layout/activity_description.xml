<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/fotoorang"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/boss"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/fotoorang"
        android:background="@color/colorAccent"
        android:orientation="horizontal"/>

    <TextView
        android:id="@+id/judulnumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:layout_below="@id/fotoorang"
        android:textSize="40dp"/>
    <TextView
        android:id="@+id/nomordesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/judulnumber"
        android:hint="xxxxxxxx"
        android:textSize="30dp"/>
    <LinearLayout
        android:id="@+id/garis2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/nomordesc"
        android:background="@color/colorAccent"
        android:orientation="horizontal"/>
    <TextView
        android:id="@+id/judulnama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:layout_below="@id/garis2"
        android:textSize="40dp"/>
    <TextView
        android:id="@+id/namadesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="blablabla"
        android:layout_below="@id/judulnama"
        android:textSize="30dp"/>





</RelativeLayout>