<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:background="@android:color/darker_gray"
        android:id="@+id/img_item_foto"
        android:scaleType="centerCrop"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_width="84dp"
        android:layout_height="84dp" />

    <LinearLayout
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_toRightOf="@id/img_item_foto"
        android:layout_toEndOf="@id/img_item_foto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            tools:text="@string/nama"
            android:textStyle="bold"
            android:textSize="18sp"
            android:id="@+id/tv_item_nama"
            android:layout_marginBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="16sp"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="@string/deskripsi"
            android:id="@+id/tv_item_deskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>