<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IDR"
        android:textAlignment="center"
        android:textSize="30dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saldo Aktif"
        android:textSize="25dp"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/saldo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rp 0"
        android:textSize="25dp"
        android:textAlignment="center"/>
<LinearLayout
    android:id="@+id/llutama"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent">
    <LinearLayout
        android:id="@+id/llhistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/colorAccent">

        <TextView
            android:id="@+id/history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="History"
            android:textAlignment="center"
            android:textSize="20dp"/>
        <LinearLayout
            android:id="@+id/efekhistory"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark"
            />
    </LinearLayout>
     <LinearLayout
         android:id="@+id/llterjadwal"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:layout_weight="1"
         android:orientation="vertical"
         android:background="@color/colorAccent">
        <TextView
            android:id="@+id/terjadwal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Terjadwal"
            android:textAlignment="center"
            android:textSize="20dp"
            />
         <LinearLayout
             android:id="@+id/efekterjadwal"
             android:layout_width="match_parent"
             android:layout_height="10dp"
             android:orientation="horizontal"
             android:background="@color/colorPrimaryDark"
             android:visibility="gone"
             />
     </LinearLayout>
    <LinearLayout
        android:id="@+id/llpemilik"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@color/colorAccent">

        <TextView
            android:id="@+id/pemilik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Pemilik"
            android:textSize="20dp"/>
        <LinearLayout
            android:id="@+id/efekpemilik"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>





    <FrameLayout
        android:id="@+id/fl_menu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>